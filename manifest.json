{
  "manifest_version": 3,
  "name": "EM Prisma Tools",
  "version": "1.0",
  "description": "Enhances Prisma functionality and provides quick access to various tools.",
  "permissions": ["tabs", "storage", "activeTab", "alarms", "notifications"],
  "host_permissions": ["https://groupmuk-prisma.mediaocean.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://groupmuk-prisma.mediaocean.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon.png"],
      "matches": ["https://groupmuk-prisma.mediaocean.com/*"]
    }
  ]
}
